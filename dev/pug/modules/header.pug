-
    const navBar = [
        {
            title: 'Университет',
            path: 'university'
        },
        {
            title: 'Образование',
            path: 'education'
        },
        {
            title: 'Наука',
            path: 'science'
        },
        {
            title: 'International',
            path: 'international'
        },
        {
            title: 'Контакты',
            path: 'contacts'
        },
        {
            title: 'Курсы',
            path: 'cources'
        }
    ];

header.header
    .container
        .header-block
            .system
                .system-header
                    a(href='#') Система обращений
                    a(href='#') Репозиторий МГЛУ
                    p RU
                        p
                            svg.icon
                                use(href=`./img/header/svg/arrow.svg#arrow`)
                        p
                            svg.icon
                                use(href=`./img/header/svg/eye.svg#eye`)
                    button(data-action="burger-menu-switcher").header-burger
                      -for (let i = 0; i < 3; i++)
                            span
            .navigation
                .logo
                    .logo-imag
                        img(src="../../img/header/logo.png")
                    .logo-text Минский государственный лингвистический университет
                nav.menu__body(data-burger-menu)
                    ul.menu__list
                      each item in navBar
                          li.menu__item
                              a.menu__link(href=`./${item.path}`) #{item.title}
                .system-footer
                    .input-box
                        input(type='text', placeholder='Search...')
                        span.search
                            i.uil.uil-search.search-icon
                            a(href='#')
                                svg.icon
                                    use(href=`./img/header/svg/search.svg#search`)
                        i.uil.uil-times.close-icon
                    a(href='#')
                        svg.icon
                            use(href=`./img/header/svg/mobile.svg#mobile`)
                    a(href='#')
                        svg.icon
                            use(href=`./img/header/svg/user.svg#user`)
